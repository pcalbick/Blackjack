package application.controller;

import java.util.ArrayList;
import java.util.Collections;
import java.util.List;

import javafx.collections.FXCollections;
import javafx.collections.ObservableList;
import javafx.fxml.FXML;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.CheckMenuItem;
import javafx.scene.control.ChoiceBox;
import javafx.stage.Stage;

public class RootController {
	
	@FXML
	private ChoiceBox games;
	
	private ObservableList<String> gamesList = FXCollections.observableArrayList();
	
	private Stage primaryStage;
	private Scene blackjackStage;
	private Scene pokerStage;
	
	public void setup(Stage primaryStage, Scene blackjackStage, Scene pokerStage) {		
		this.primaryStage = primaryStage;
		this.blackjackStage = blackjackStage;
		this.pokerStage = pokerStage;
	}
	
	@FXML
	public void handleBlackjack() {
		primaryStage.setScene(blackjackStage);
		games.set
	}
	
	@FXML
	public void handlePoker() {
		primaryStage.setScene(pokerStage);
		blackjack.setDisable(false);
		blackjack.setSelected(false);
		poker.setSelected(true);
		poker.setDisable(true);
	}
}
