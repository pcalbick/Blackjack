package application.controller;

import application.model.StartModel;
import javafx.event.ActionEvent;
import javafx.fxml.FXML;
import javafx.scene.control.Button;
import javafx.scene.layout.HBox;

public class StartController {
	private StartModel startMod;
	
	@FXML
	private Button start;
	
	@FXML
	private Button diff;
	
	@FXML
	private HBox choice;
	
	@FXML
	private Button easy;
	
	@FXML
	private Button med;
	
	@FXML
	private Button hard;
	
	@FXML
	private Button quit;
	
	@FXML
	private void handleStart() {
		
	}
	
	@FXML
	private void handleDiff() {
		if(!choice.isVisible()) {
			choice.setVisible(true);
			diff.setDisable(true);
		}
	}
	
	@FXML
	private void handleDiffChoice(ActionEvent event) {
		Button button = (Button) event.getSource();
		String str = "";
		switch (button.getText()) {
			case "Easy":
				str = "Easy";
				break;
			case "Medium":
				str = "Medium";
				break;
			case "Hard":
				str = "Hard";
				break;
		}
		diff.setText(str);
		diff.setDisable(false);
		choice.setVisible(false);
	}
	
	@FXML
	private void handleQuit() {
		System.exit(0);
	}
	
	public void setModel(StartModel startMod) {
		this.startMod = startMod;
	}
}
