package application.controller;

import java.util.ArrayList;
import java.util.List;

import javafx.fxml.FXML;
import javafx.scene.Scene;
import javafx.scene.control.CheckMenuItem;
import javafx.scene.control.ChoiceBox;
import javafx.stage.Stage;

public class RootController {
	
	@FXML
	private ChoiceBox games;
	
	private List<String> gamesList = new ArrayList<String>();
	
	private Stage primaryStage;
	private Scene blackjackStage;
	private Scene pokerStage;
	
	public void setup(Stage primaryStage, Scene blackjackStage, Scene pokerStage) {
		gamesList.add("Blackjack");
		gamesList.add("Poker");
		
		this.primaryStage = primaryStage;
		this.blackjackStage = blackjackStage;
		this.pokerStage = pokerStage;
		
