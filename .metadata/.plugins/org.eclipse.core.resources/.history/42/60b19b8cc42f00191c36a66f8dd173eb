package application.controller;

import javafx.fxml.FXML;
import javafx.scene.Scene;
import javafx.scene.control.Button;
import javafx.scene.control.CheckMenuItem;
import javafx.stage.Stage;

public class RootController {
	
	@FXML
	public CheckMenuItem blackjack;
	@FXML
	public CheckMenuItem poker;
	
	private Stage primaryStage;
	private Scene blackjackStage;
	private Scene pokerStage;
	
	public void setup(Stage primaryStage, Scene blackjackStage, Scene pokerStage) {
		this.primaryStage = primaryStage;
		this.blackjackStage = blackjackStage;
		this.pokerStage = pokerStage;
	}
	
	@FXML
	public void handleBlackjack() {
		primaryStage.setScene(blackjackStage);
		blackjack.setDisable(true);
		poker.setDisable(false);
	}
	
	@FXML
	public void handlePoker() {
		primaryStage.setScene(pokerStage);
	}
}
